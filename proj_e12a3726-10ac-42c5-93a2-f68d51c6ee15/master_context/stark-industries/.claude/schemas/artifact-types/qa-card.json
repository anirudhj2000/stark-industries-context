{
  "id": "QA_CARD",
  "name": "Q&A Card",
  "description": "Question card for user response",
  "file_types": ["json", "yaml"],
  "render": {
    "component": "QACardRenderer",
    "supports_preview": true,
    "interactive": true
  },
  "metadata_schema": {
    "type": "object",
    "required": ["question_text", "question_type"],
    "properties": {
      "question_text": {
        "type": "string",
        "description": "The question being asked"
      },
      "question_type": {
        "type": "string",
        "enum": ["text", "multiple_choice", "rating", "file_upload"]
      },
      "options": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {"type": "string"},
            "value": {"type": "string"}
          }
        }
      },
      "context": {
        "type": "string"
      },
      "priority": {
        "type": "string",
        "enum": ["low", "medium", "high", "critical"],
        "default": "medium"
      },
      "assigned_to": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  }
}
