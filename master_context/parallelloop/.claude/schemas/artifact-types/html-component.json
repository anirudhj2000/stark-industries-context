{
  "id": "HTML_COMPONENT",
  "name": "HTML Component",
  "description": "Server-driven UI component",
  "file_types": ["json", "html"],
  "render": {
    "component": "DynamicRenderer",
    "supports_preview": true,
    "interactive": true
  },
  "metadata_schema": {
    "type": "object",
    "required": ["component_type", "data"],
    "properties": {
      "component_type": {
        "type": "string",
        "enum": ["card", "table", "chart", "form", "timeline", "kanban"]
      },
      "data": {
        "type": "object",
        "description": "JSON data the component renders"
      },
      "title": {
        "type": "string"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {"type": "string"},
            "action_type": {"type": "string", "enum": ["link", "callback", "command"]},
            "target": {"type": "string"}
          }
        },
        "default": []
      }
    }
  }
}
