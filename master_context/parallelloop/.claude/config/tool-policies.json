{
  "version": "1.0",
  "description": "Agent-specific tool usage policies. Enforced by PreToolUse hooks.",
  "agents": {
    "org-chat": {
      "description": "READ-ONLY organization knowledge assistant",
      "access_level": "read_only",
      "allowed_tools": [
        "Read",
        "Grep",
        "Glob",
        "WebSearch"
      ],
      "blocked_tools": [
        "Write",
        "Edit",
        "NotebookEdit",
        "MultiEdit",
        "Bash",
        "BashOutput",
        "KillShell",
        "WebFetch",
        "mcp__ide__executeCode"
      ],
      "rationale": [
        "Prevents file modifications to entity data",
        "Blocks system-level access to protect infrastructure",
        "Disables code execution capabilities",
        "WebSearch allowed for external/current information queries"
      ]
    }
  }
}
