{
  "id": "PROJECT_BRIEF_DRAFT",
  "name": "Project Brief Draft",
  "description": "Draft project brief from brainstorming session",
  "file_types": ["md"],
  "render": {
    "component": "ProjectBriefViewer",
    "supports_preview": true,
    "interactive": true
  },
  "metadata_schema": {
    "type": "object",
    "required": ["project_data"],
    "properties": {
      "project_data": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": {"type": "string"},
          "type": {"type": "string", "enum": ["PRODUCT_DEVELOPMENT", "MARKETING_CAMPAIGN", "RESEARCH", "OPERATIONS", "OTHER"]},
          "description": {"type": "string"},
          "problem_statement": {"type": "string"},
          "goals": {"type": "array", "items": {"type": "string"}},
          "target_audience": {"type": "string"},
          "key_features": {"type": "array", "items": {"type": "string"}},
          "constraints": {"type": "array", "items": {"type": "string"}},
          "open_questions": {"type": "array", "items": {"type": "string"}},
          "suggested_team_roles": {"type": "array", "items": {"type": "string"}},
          "suggested_materials": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}
