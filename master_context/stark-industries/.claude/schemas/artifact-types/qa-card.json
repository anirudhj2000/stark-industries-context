{
  "id": "QA_CARD",
  "name": "Q&A Card",
  "description": "Question card for user response with structured answer types",
  "file_types": ["json", "yaml"],
  "render": {
    "component": "QACardRenderer",
    "supports_preview": true,
    "interactive": true
  },
  "metadata_schema": {
    "type": "object",
    "required": ["title", "text", "question_type", "answer_type"],
    "properties": {
      "title": {
        "type": "string",
        "maxLength": 200,
        "description": "Short one-liner summary for display"
      },
      "text": {
        "type": "string",
        "description": "The full question text with context"
      },
      "question_type": {
        "type": "string",
        "enum": ["gap_analysis", "conflict_resolution", "clarification", "factual", "opinion", "validation"],
        "description": "Purpose of the question - why we're asking"
      },
      "answer_type": {
        "type": "string",
        "enum": ["free_text", "yes_no", "multiple_choice", "multi_select", "rating"],
        "default": "free_text",
        "description": "How to answer - determines UI rendering"
      },
      "options": {
        "type": "array",
        "description": "For multiple_choice/multi_select: available choices",
        "items": {
          "type": "object",
          "required": ["label", "value"],
          "properties": {
            "label": {"type": "string", "description": "Display text"},
            "value": {"type": "string", "description": "Value to store (snake_case)"}
          }
        }
      },
      "context": {
        "type": "object",
        "description": "Additional context about the question source"
      },
      "priority": {
        "type": "string",
        "enum": ["low", "normal", "high", "urgent"],
        "default": "normal"
      },
      "suggested_assignees": {
        "type": "array",
        "description": "AI-suggested people to answer this question",
        "items": {
          "type": "object",
          "properties": {
            "id": {"type": "string", "description": "Person entity ID or email"},
            "reason": {"type": "string", "description": "Why this person is suggested"}
          }
        }
      }
    }
  }
}
