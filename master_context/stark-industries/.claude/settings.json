{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/enforce-agent-tool-policy.sh"
          }
        ]
      },
      {
        "matcher": "Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-org-subdirs.sh"
          }
        ]
      }
    ]
  }
}
